# grade generator

print("---Grade Generator---")
print()
user = str(input("Enter yor name :"))

def grade_generator():
  test_name = input("Enter the name of the test :")
  max_score = int(input("Enter the maximum score of the test :"))
  user_score = int(input("Enter your score :"))
  percentage = (user_score/max_score)*100
  if percentage >= 90:
    print("You got",percentage,"% which is a A+")
  elif percentage >= 80 and percentage <= 89:
    print("You got",percentage,"% which is a A")
  elif percentage >= 70 and percentage <= 79:
    print("You got",percentage,"% which is a B")
  elif percentage >= 60 and percentage <= 69:
    print("You got",percentage,"% which is a C")
  elif percentage >= 50 and percentage <= 59:
    print("You got",percentage,"% which is a D")
  elif percentage < 50 and percentage <=35:
    print("You got",percentage,"% which is a U")
    if percentage < 35:
      print("You failed the test")
    
  else:
    print("Please enter a valid score")


grade_generator()
                  
      
